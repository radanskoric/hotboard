<%= turbo_stream_from "main-board" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tickets" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tickets</h1>
  </div>

  <div class="flex flex-grow space-x-4 overflow-x-auto" data-controller="drag">
    <% Ticket.states.keys.each do |state| %>
      <%= render "column", state:, tickets: @tickets.fetch(state, []) %>
    <% end %>
  </div>
</div>
