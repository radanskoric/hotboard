<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New ticket</h1>

  <%= turbo_frame_tag new_ticket_dom_id(@ticket.state),
      target: ("_top" if hotwire_native_app?) do
  %>
    <div data-controller="form" class="ticket-card">
      <%= render "form", ticket: @ticket %>

      <button data-action="click->form#remove"
              data-controller="bridge--cancel-button"
              class="mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium">
        Cancel
      </button>
    </div>
  <% end %>

  <%= link_to "Back to tickets", tickets_path, class: "hide-on-native ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
